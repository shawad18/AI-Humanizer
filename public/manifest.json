    }
  ],
  "related_applications": [],
  "protocol_handlers": [
    {
      "protocol": "web+aihumanizer",
      "url": "/?text=%s"
    }
  ],
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["text/plain", ".txt", ".doc", ".docx", ".pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/file-handler/",
      "accept": {
        "text/plain": [".txt"],
        "application/msword": [".doc"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
